{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@exceptions/*": ["exceptions/*"],
      "@middlewares/*": ["middlewares/*"],
      "@requests/*": ["requests/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@storage/*": ["storage/*"],
      "@enums/*": ["enums/*"],
      "@mail/*": ["mail/*"],
      "@views/*": ["views/*"],
      "@entities/*": ["entities/*"],
      "@migrations/*": ["migrations/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
