{
  "name": "vdhuyme_api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "production": "npm run build && npm run migration:up && npm run seed:up && npm start",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
    "typeorm": "node -r ts-node/register -r tsconfig-paths/register ./typeorm-cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/data-source.ts",
    "migration:up": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:undo": "npm run typeorm -- migration:revert -d src/data-source.ts",
    "seed:up": "ts-node -r tsconfig-paths/register ./node_modules/@jorgebodega/typeorm-seeding/dist/cli.js seed -d src/data-source.ts src/seeders/**/*{.ts,.js}",
    "prettier:fix": "prettier --write ."
  },
  "keywords": [
    "vdhuyme_api",
    "VDH",
    "Vo Duc Huy"
  ],
  "author": "Vo Duc Huy",
  "license": "ISC",
  "description": "VDH BE Portfolio",
  "dependencies": {
    "@jorgebodega/typeorm-seeding": "^7.1.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.23",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^6.4.17",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
